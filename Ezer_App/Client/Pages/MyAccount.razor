@page "/myaccount"

<PageTitle>My Account</PageTitle>

<div style="margin-left: 250px;">
  <h2 class="text-center text-ezer mb-2 display-6">My Account</h2>
  <div class="card-1 col-11 m-auto mt-2 box-shadow">
    <div class="card-body">

      <div class="top d-flex justify-content-center gap-3">


        <div class="card box-shadow col-3">
          <div class="card-header card-header-2 text-center text-ezer">
            <h5>I am...</h5>
          </div>
          <div class="card-body p-2" style="padding-left: 15px !important;">

            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="true" id="IsMidwife">
              <label class="form-check-label" for="IsMidwife">
                A Midwife
              </label>
            </div>

            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="true" id="IsDoula">
              <label class="form-check-label" for="IsDoula">
                A Doula
              </label>
            </div>

            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
              <label class="form-check-label" for="flexCheckDefault">
                Neither of the above
              </label>
            </div>


          </div>
        </div>

        <div class="card box-shadow col-3">
          <div class="card-header card-header-2 text-center text-ezer">
            <h5>My Caregiver(s)</h5>
          </div>
          <div class="card-body p-2">
            <NavLink class="nav-link text-center" href="caregiversearch">
              <span class="oi oi-people text-ezer" aria-hidden="true"></span> Find Doulas
            </NavLink>
            <NavLink class="nav-link  text-center" href="caregiversearch">
              <span class="oi oi-people text-ezer" aria-hidden="true"></span> Find Midwives
            </NavLink>
          </div>
        </div>
      </div>

      <div class="middle mt-2">
        @* <EditForm>
        <label for="firstname">First Name</label>
        <InputText id="firstname" class="form-control"></InputText>
        </EditForm> *@
        <form action="">

          <div class="middle-forms d-flex gap-2 justify-content-around">
            <div class="card box-shadow col-3 mt-2">
              <div class="card-header card-header-2 text-center text-ezer">
                <h5>Your Information</h5>
              </div>
              <div class="card-body">
                <div class="form-floating">
                  <input type="text" name="PhoneNumber" id="PhoneNumber" placeholder="Phone Number:"
                    class="form-control">
                  <label for="PhoneNumber">Phone Number:</label>
                </div>
                <div class="form-floating mt-3">
                  <input type="text" name="AddressStreet" id="AddressStreet" placeholder="Street Address:"
                    class="form-control">
                  <label for="AddressStreet">Street Address:</label>
                </div>
                <div class="form-floating mt-3">
                  <input type="text" name="AddressCity " id="AddressCity" placeholder="City:" class="form-control">
                  <label for="AddressCity">City:</label>
                </div>
                <div class="form-floating mt-3">
                  <input type="text" name="AddressState" id="AddressState" placeholder="State:" class="form-control">
                  <label for="AddressState">State:</label>
                </div>
                <div class="form-floating mt-3">
                  <input type="text" name="AddressZipcode" id="AddressZipcode" placeholder="Zip Code:"
                    class="form-control">
                  <label for="AddressZipcode">Zip Code:</label>
                </div>
                <div class="form-floating mt-3">
                  <input type="text" name="DueDate" id="DueDate" placeholder="Your Due Date:"
                    class="form-control">
                  <label for="DueDate">Your Due Date:</label>
                </div>
              </div>
            </div>
            <div class="card box-shadow col-3 mt-2">
              <div class="card-header card-header-2 text-center text-ezer">
                <h5>Spouse Info</h5>
              </div>
              <div class="card-body">
                <div class="form-floating">
                  <input type="text" name="SpouseFirstName" id="SpouseFirstName" placeholder="First Name:"
                    class="form-control">
                  <label for="SpouseFirstName">First Name:</label>
                </div>
                <div class="form-floating mt-3">
                  <input type="text" name="SpouseLastName " id="SpouseLastName" placeholder="Last Name:"
                    class="form-control">
                  <label for="SpouseLastName">Last Name:</label>
                </div>
                <div class="form-floating mt-3">
                  <input type="text" name="SpouseNumber" id="SpouseNumber" placeholder="Phone Number:"
                    class="form-control">
                  <label for="SpouseNumber">Phone Number:</label>
                </div>
              </div>
            </div>

            <div class="card box-shadow col-3 mt-2">
              <div class="card-header card-header-2 text-center text-ezer">
                <h5>Emergency Info</h5>
              </div>
              <div class="card-body">
                <div class="form-floating">
                  <input type="text" name="EmergencyFirstName" id="EmergencyFirstName" placeholder="First Name:"
                    class="form-control">
                  <label for="EmergencyFirstName">First Name:</label>
                </div>
                <div class="form-floating mt-3">
                  <input type="text" name="EmergencyLastName " id="EmergencyLastName" placeholder="Last Name:"
                    class="form-control">
                  <label for="EmergencyLastName">Last Name:</label>
                </div>
                <div class="form-floating mt-3">
                  <input type="text" name="EmergencyNumber" id="EmergencyNumber" placeholder="Phone Number:"
                    class="form-control">
                  <label for="EmergencyNumber">Phone Number:</label>
                </div>
              </div>
            </div>

          </div>

          <div class="d-flex justify-content-center">
            <input type="submit" value="Save Changes" class="btn btn-primary mt-3 box-shadow">
          </div>

        </form>
      </div>

    </div>
  </div>

</div>

