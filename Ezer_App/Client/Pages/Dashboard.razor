@page "/dashboard"
@using System.Text.Json;
@inject HttpClient Http


<PageTitle>Home</PageTitle>

<div style="margin-left: 250px;">
  <h2 class="text-center display-6 text-ezer">Welcome !</h2>

  <div class="alert alert-danger col-7 m-auto mt-3 alert-dismissible fade show d-flex justify-content-between align-items-center" role="alert">
    <div>
      Please make sure to finish creating your account under the <a href="myaccount" class="alert-link">My Account</a>
      section.
    </div>
    <button type="button" class="btn btn-sm btn-danger close" data-bs-dismiss="alert"><span class="oi oi-x" aria-hidden="true"></span></button>

  </div>

  <div class="card col-7 m-auto mt-4">
    <div class="card-header text-center">
      <h4 class="display-6" style="font-size: 1.7rem;">This week in your pregnancy:</h4>
    </div>
    <div class="card-body">
      @{
        var DueDate = DateTime.Now.AddDays(20 * 7 + 1);
        var ConceptionDate = DateTime.Now;
        var TimeDiff = DueDate - ConceptionDate;
        int? NumOfWeeks = TimeDiff.Days / 7;
        <p>You are @NumOfWeeks weeks along!</p>
        @* <p>@serializedString</p> *@
      }
    </div>
  </div>
</div>

