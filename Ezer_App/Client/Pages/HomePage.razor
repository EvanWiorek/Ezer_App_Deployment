@page "/"
@inject NavigationManager NavigationManager

<PageTitle>Ezer App | Helping You Help</PageTitle>

<div class="white-bg"></div>

<div class="header-bg">
</div>

<div class="box-content col-11 m-auto">
    <h1 class="text-center text-light display-6">A pregnancy helper app, and caregiver social network.</h1>
    <div class="welcome-text col-11 m-auto">
      <p class="text-center mt-3 mb-5 text-light display-6" style="font-size: 2rem;">Welcome to Ezer App!</p>
      <div class="feature-cards d-flex justify-content-around">
        <div class="card">
          <div class="card-header text-center display-6" style="font-size: 2rem;">Who is this for?</div>
          <div class="card-body" style="font-size: 1.2rem; width: 360px">
            <ul>
              <li>Expectant Mothers</li>
              <li>Midwives</li>
              <li>Doulas</li>
            </ul>
          </div>
        </div>
        <div class="card">
          <div class="card-header text-center display-6" style="font-size: 2rem;">What does it do?</div>
          <div class="card-body" style="font-size: 1.2rem; width: 360px">
            <ul>
              <li>Connects expectant mothers with Midwives and Doulas in their area</li>
              <li>Provides weekly pregnancy updates</li>
            </ul>
          </div>
        </div>
        <div class="card">
          <div class="card-header text-center display-6" style="font-size: 2rem;">How do I start?</div>
          <div class="card-body" style="font-size: 1.2rem; width: 360px">
            <ol>
              <li>Click "Login" to create an account</li>
              <li>Add your information under My Account</li>
              <li>Begin your search with "Find Caregiver(s)"</li>
            </ol>
          </div>
        </div>
      </div>
  
    </div>
</div>

