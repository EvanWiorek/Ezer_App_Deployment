<div class="card">
    <div class="card-header">@Caregiver.FirstName @Caregiver.LastName</div>
    <div class="card-body">
        @{imgsrc = "images/" + @random.Next(1,41) + ".png";}
        <img src="@imgsrc" class="search-image">
        <br>
        <h6>Lives in:</h6>
        <h4>@Caregiver.AddressCity</h4>
        <p>@Caregiver.Email</p>
        <button class="nav-link button" href="/caregiverdetails/@Caregiver.UserId">View</button>
    </div>
</div>

@code {
    public string imgsrc {get;set;} = "";
    Random random = new Random();    
    [Parameter]
    public User? Caregiver { get; set; }

}